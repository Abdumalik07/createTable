CREATE TABLE cities(
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    population INT,
    location VARCHAR(50),
    area INT
);

INSERT INTO cities(name, population, location, area)
values ('Bishkek',1082000,'Kyrgyzstan',127),
        ('Osh',256763,'Kyrgyzstan',182),
        ('Almaty',1777000,'Kazakhstan',682),
        ('Nursultan',256763,'Kazakhstan',182);

CREATE TABLE cars(
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    model VARCHAR(50),
    maxSpeed INT,
    power INT,
    color VARCHAR(50)
);
INSERT INTO cars(name, model, maxSpeed, power, color)
values ('Subaru','outback',240,157,'white'),
       ('Mersedes-Benz','C500',260,459,'black');

CREATE TABLE foods(
    id SERIAL PRIMARY KEY ,
    name VARCHAR(50),
    country VARCHAR(50),
    preparingTime INT,
    price NUMERIC
);
INSERT INTO foods(name, country, preparingTime, price)
values ('Beshbarmak','Kyrgyzstan',60,200),
       ('Ash','Uzbekistan',90,180);

CREATE TABLE animals(
    id INT PRIMARY KEY ,
    name VARCHAR(50),
    color VARCHAR(50),
    food VARCHAR(50),
    live VARCHAR(50)
);
INSERT INTO animals(id, name, color, food, live)
values (1,'Dog','Black','meat','house'),
       (2,'Cat','yellow','meat','hose');

CREATE TABLE parks(
    id INT PRIMARY KEY ,
    name VARCHAR(50),
    location VARCHAR(50)
);
INSERT INTO parks(id, name, location)
values (1,'Panfilov','Bishkek'),
       (2,'Ala archa','Bishkek');

CREATE TABLE cakes(
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    weight INT,
    price NUMERIC,
    shape VARCHAR(50)
);

INSERT INTO cakes(id, name, weight, price, shape)
values (1,'Kulikov',800,1000,'circle'),
       (2,'Shirin',600,800,'square');

CREATE TABLE houses(
    id SERIAL PRIMARY KEY,
    type VARCHAR(50),
    price NUMERIC,
    area INT,
    stage INT
);
INSERT INTO houses(type, price, area, stage)
values ('mansard',50000,130,2),
       ('Multifamily Homes',10000,150,2);

CREATE TABLE mobile_phones(
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    model VARCHAR(50),
    price NUMERIC,
    color VARCHAR(50)
);
INSERT INTO mobile_phones(name, model, price, color)
values ('Samsung','Galaxy S9',25000,'white'),
       ('Apple','Iphone12',70000,'gold');

CREATE TABLE movies(
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    genre VARCHAR(50),
    director VARCHAR(50),
    country VARCHAR(50)
);
INSERT INTO movies(name, genre, director, country)
values ('Harry Potter','fantasy','Chris Columbus','usa'),
       ('Iron man','fantasy','Jon Favreau','usa');

CREATE TABLE books(
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    author VARCHAR(50),
    genre VARCHAR(50),
    price INT
);

CREATE TABLE drugs(
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    price NUMERIC,
    appointment VARCHAR(50),
    date INT
);

CREATE TABLE person(
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    height INT,
    weight INT,
    profession VARCHAR(50)
);

CREATE TABLE countries(
    id INT PRIMARY KEY,
    name VARCHAR(50),
    capital VARCHAR(50),
    population INT,
    polity VARCHAR
);

CREATE TABLE sport_games(
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    amount_of_players INT,
    time INT
);

CREATE TABLE computers(
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    price NUMERIC,
    ssd int,
    video_card VARCHAR(50)
);






